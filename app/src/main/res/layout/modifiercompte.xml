<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifiercompteActivity">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compte"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/t"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier                  Annuler"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/t1"
        android:layout_below="@+id/t"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Pseudo"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/pseudo"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/t2"
        android:layout_marginRight="30dp"
        android:layout_marginTop="08dp"
        android:background="@drawable/cadree"
        android:hint="Entrez votre pseudo"

        android:textSize="20dp"/>
    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pseudo"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/email"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/t3"
        android:layout_marginRight="30dp"
        android:layout_marginTop="08dp"
        android:background="@drawable/cadree"
        android:hint="Entrez votre Email"

        android:textSize="20dp"/>
    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouveau mot de passe"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"
        android:layout_below="@+id/email"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/motpasse"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/t4"
        android:layout_marginRight="30dp"
        android:layout_marginTop="08dp"
        android:background="@drawable/cadree"
        android:hint="Entrez votre nouveau mot de passe"

        android:textSize="20dp"/>
    <TextView
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmer le mot de passe"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:textSize="25dp"
        android:layout_below="@+id/motpasse"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/motdepasse2"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/t5"
        android:layout_marginRight="30dp"
        android:layout_marginTop="08dp"
        android:background="@drawable/cadree"
        android:hint="Entrez le mÃªme mot de passe"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/motdepasse2"
        android:background="@drawable/cadree"
        android:textSize="18dp"
        android:text="Eregistrer"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>